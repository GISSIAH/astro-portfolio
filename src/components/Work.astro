
---
export interface Props {
	title: string;
    techstack : string[];
    desc : string;
    img: string;
}

const { title , techstack, desc, img } = Astro.props as Props;
---


<div class="flex flex-col gap-4 p-3 max-w-sm bg-slate-50 rounded-lg hover:shadow-xl hover:shadow-blue-200  shadow-md dark:hover:shadow-gray-800 dark:bg-slate-800">
    <img src={img} class="w-full h-full" />
    <h1 class="text-2xl font-medium text-slate-700 dark:text-slate-100">
        {title}
    </h1>
    <ul class="grid grid-cols-3 gap-3 md:gap-1">
        {techstack.map(ts => (<p class="text-sm text-center text-light border border-blue-400 rounded-xl px-2 py-1 md:text-sm md:px-1 dark:text-slate-100">{ts}</p>))}
    </ul>
    <p class="text-lg font-normal text-gray-500 dark:text-slate-200">
        {desc}
    </p>
    <slot />

</div>