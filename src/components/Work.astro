
---
export interface Props {
	title: string;
    techstack : string[];
    desc : string;
    img: string;
}

const { title , techstack, desc, img } = Astro.props as Props;
---


<div class="flex flex-col gap-4 p-3 max-w-sm bg-white rounded-lg border hover:shadow-xl hover:shadow-blue-200 border-gray-200 shadow-md">
    <img src={img} class="w-full h-full" />
    <h1 class="text-2xl font-medium">
        {title}
    </h1>
    <ul class="grid grid-cols-3 gap-3 md:gap-1">
        {techstack.map(ts => (<p class="text-sm text-center text-light border border-blue-400 rounded-xl px-2 py-1 md:text-sm md:px-1">{ts}</p>))}
    </ul>
    <p class="text-lg font-normal text-gray-500">
        {desc}
    </p>
    <slot />

</div>