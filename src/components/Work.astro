
---
export interface Props {
	title: string;
    techstack : string[];
    desc : string;
}

const { title , techstack, desc } = Astro.props as Props;
---


<div class="flex flex-col gap-4 p-6 max-w-sm bg-white rounded-lg border hover:shadow-xl border-gray-200 shadow-md  dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
    <img src={"https://picsum.photos/400/200"} class="w-full h-200" />
    <h1 class="text-2xl font-medium">
        {title}
    </h1>
    <p class="text-lg font-normal text-gray-500">
        {desc}
    </p>
    <ul class="grid grid-cols-3 gap-3 ">
        {techstack.map(ts => (<p class="text-light bg-gray-200 rounded-xl px-2 py-1">{ts}</p>))}
    </ul>

</div>