---
export interface Props {
  title: string;
  place: string;
  time: string;
  skills: string[];
}

const { title, place, time, skills } = Astro.props as Props;
---

<div class="flex flex-col gap-4 p-3 max-w-sm bg-white rounded-lg hover:shadow-sm hover:shadow-blue-200 shadow-md dark:bg-slate-800">
  <p class="text-2xl font-semi-bold dark:text-slate-100">{title}</p>
  <p class="text-xl font-normal dark:text-slate-300">{place}</p>
  <p class="text-lg font-normal text-gray-700 dark:text-slate-400">{time}</p>
  <ul class="grid grid-cols-3 gap-3 md:gap-1">
    {skills.map(ts => (<p class="text-sm text-center text-light border border-blue-400 rounded-xl px-2 py-1 md:text-sm md:px-1 dark:text-slate-300">{ts}</p>))}
</ul>
</div>


