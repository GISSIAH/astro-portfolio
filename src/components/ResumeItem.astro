---
export interface Props {
  title: string;
  place: string;
  time: string;
}

const { title, place, time } = Astro.props as Props;
---

<div class="flex flex-col gap-4 p-3 max-w-sm bg-white rounded-lg border hover:shadow-xl hover:shadow-blue-200 border-gray-200 shadow-md">
  <p class="text-2xl font-semi-bold">{title}</p>
  <p class="text-xl font-normal">{place}</p>
  <p class="text-lg font-normal text-gray-700">{time}</p>
</div>


