---
import Work from "../components/Work.astro";
import Layout from "../layouts/layout.astro";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<Layout page="Home">
  <div class="flex flex-col  md:flex-row md:justify-center">
    <div class="flex justify-center">
      <img src={"https://picsum.photos/300"} class="w-300 h-300" />
    </div>
    <div class="px-6 w-full flex flex-col gap-6 text-center items-center md:w-2/5 md:items-start md:text-left">
      <h1
        class="text-5xl font-bold bg-clip-text bg-gradient-to-r from-blue-400 to-blue-200 text-transparent"
      >
        Hi I'M BRYAN
      </h1>
      <p class="text-lg font-normal">
        I'm a Junior Javascript developer based in Lilongwe, Malawi. I have over
        2 years of professional experience and i specialize in creating web
        apps. I am open for new opportunities and interesting projects.
      </p>
      <div class="flex gap-3">
        <a
          href="/resume"
          class="bg-blue-400 rounded-lg text-white px-3 py-2 hover:bg-blue-500"
          >VIEW RESUME</a
        >
        <a
          href="/contact"
          class="outline outline-1 outline-blue-400 rounded-lg px-3 py-2 hover:outline-blue-500"
          >CONTACT ME</a
        >
      </div>
    </div>
  </div>

  <div class="flex justify-center">
    <h1 class="text-4xl font-bold">Recent Projects</h1>
  </div>
  <div class="px-4 flex flex-col gap-4 items-center md:flex-row md:px-4 md:justify-center">
    <Work
      img={"https://res.cloudinary.com/attic-gis/image/upload/v1666336371/Screenshot_2022-10-21_091234_ydiisn.png"}
      title="Todo App"
      techstack={["Next JS", "Typescript"]}
      desc="A full stack app for keeping track of things todo. add tasks with or without a location. It uses browser localstorage to store all data."
    />
    <Work
      img="https://res.cloudinary.com/attic-gis/image/upload/v1666336241/Screenshot_2022-10-21_091028_difvqp.png"
      title="Real Estate Marketing Website"
      techstack={["Next JS", "Node Js", "Mongo DB"]}
      desc="Listing real estate made. Built the backend using Node JS and the frontend using  Next JS."
    />
  </div>
</Layout>
