---
import Work from "../components/Work.astro";
import Layout from "../layouts/layout.astro";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<Layout page="Home">
  <div class="flex flex-col md:flex-row md:justify-center">
    <div class="flex justify-center">
      <img
        src={"https://res.cloudinary.com/attic-gis/image/upload/v1654206006/IMG_20220602_233259-min_yr4zct.jpg"}
        class="w-300 h-full"
      />
    </div>
    <div
      class="px-6 w-full flex flex-col gap-6 text-center items-center md:w-2/5 md:items-start md:text-left md:justify-center"
    >
      <h1
        class="text-5xl font-bold bg-clip-text bg-gradient-to-r from-blue-400 to-blue-200 text-transparent"
      >
        Hi I'M BRYAN
      </h1>
      <p class="text-lg font-normal text-slate-700 dark:text-slate-300">
        I'm Bryan Malunje a Javascript developer based in Lilongwe, Malawi. I
        have 3 years of professional experience and i specialize in
        creating Full stack web apps. I also work with other languages namely Typescript, C#, Kotlin and Python. Im open to projects and work opportunities
      </p>
      <div class="flex gap-3">
        <a
          href="/resume"
          class="bg-blue-400 rounded-lg text-white px-3 py-2 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600"
          >VIEW RESUME</a
        >
        <a
          href="/contact"
          class="outline outline-1 outline-blue-400 rounded-lg px-3 py-2 hover:outline-blue-500 dark:text-slate-100 dark:outline-blue-700 dark:hover:outline-blue-600"
          >CONTACT ME</a
        >
      </div>
    </div>
  </div>

  <div class="flex justify-center">
    <h1 class="text-4xl font-bold text-slate-800 dark:text-slate-100">Recent Projects</h1>
  </div>
  <div
    class="px-4 flex flex-col gap-4 items-center md:flex-row md:px-4 md:justify-center"
  >
    <Work
      img={"https://res.cloudinary.com/attic-gis/image/upload/v1666336371/Screenshot_2022-10-21_091234_ydiisn.png"}
      title="Todo App"
      techstack={["Next JS", "Typescript"]}
      desc="A full stack app for keeping track of things todo. add tasks with or without a location. It uses browser localstorage to store all data."
    >
      <a
        href="https://todo.gissiah.vercel.app/"
        class="bg-blue-600 rounded-full px-3 py-1 w-32 cursor-pointer text-white hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600"
        >Open App</a
      >
    </Work>
    <Work
      img="https://res.cloudinary.com/attic-gis/image/upload/v1666336241/Screenshot_2022-10-21_091028_difvqp.png"
      title="Real Estate Marketing Website"
      techstack={["Next JS", "Node Js"]}
      desc="Listing real estate made easy. Built the backend using Node JS, with Mongo DB as the database and the used Next JS for the frontend"
    >
      <a
        href="https://zamalo.vercel.app"
        class="bg-blue-600 rounded-full px-3 py-1 w-32 cursor-pointer text-white hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600"
        >Open App</a
      >
    </Work>
    <div class="flex flex-col gap-2">
      <iframe
        width="400"
        height="400"
        src="https://www.youtube.com/embed/Sc9sSl7-AIc"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </div>
  </div>
  
</Layout>
